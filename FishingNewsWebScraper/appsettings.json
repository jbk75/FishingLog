{
  "Database": {
    "ConnectionString": "Server=localhost;Database=FishingLog;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "Scraper": {
    "YearsBack": 2,
    "ImageDirectory": "images",
    "FishKeywords": [
      "lax",
      "bleikja",
      "urriði",
      "sjóbleikja",
      "salmon",
      "trout",
      "arctic char"
    ],
    "Sources": [
      {
        "Name": "Veiðiþjónusta Iceland",
        "Url": "https://www.veidithjonustan.is/category/frettir/"
      },
      {
        "Name": "Angling.is",
        "Url": "https://angling.is/frettir/",
        "Query": "//article"
      }
    ],
    "SocialMediaSources": [
      {
        "Platform": "Instagram",
        "SearchUrlTemplate": "https://www.instagram.com/explore/tags/{query}/",
        "Queries": [
          "laxveiði",
          "icelandfishing"
        ],
        "PostSelector": "//article",
        "ContentSelector": ".//span",
        "LinkSelector": ".//a[@href]",
        "TimestampSelector": ".//time",
        "TimestampAttribute": "datetime"
      },
      {
        "Platform": "Facebook",
        "SearchUrlTemplate": "https://www.facebook.com/search/posts/?q={query}",
        "Queries": [
          "salmon fishing iceland",
          "trout fishing iceland"
        ],
        "PostSelector": "//div[contains(@role,'article')]",
        "ContentSelector": ".//span",
        "LinkSelector": ".//a[@href]",
        "TimestampSelector": ".//abbr"
      }
    ]
  },
  "Weather": {
    "ObservationEndpointTemplate": "https://api.open-meteo.com/v1/forecast?latitude={latitude}&longitude={longitude}&start_date={date}&end_date={date}&hourly=temperature_2m,precipitation,weathercode,windspeed_10m,winddirection_10m"
  }
}
